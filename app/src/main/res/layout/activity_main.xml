<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="Hello, These are some custom Dialog Notifications"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnSnackBars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:backgroundTint="#CCC7C7"
        android:textColor="@color/black"
        android:text="Snack Bars" />

    <Button
        android:id="@+id/btnAlertDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:backgroundTint="#CCC7C7"
        android:textColor="@color/black"
        android:text="Alert Dialog" />

    <Button
        android:id="@+id/btnCustomDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:backgroundTint="#CCC7C7"
        android:textColor="@color/black"
        android:text="Custom Dialog" />

    <Button
        android:id="@+id/btnCustomProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:backgroundTint="#CCC7C7"
        android:textColor="@color/black"
        android:text="Custom Progress Bar" />

</LinearLayout>